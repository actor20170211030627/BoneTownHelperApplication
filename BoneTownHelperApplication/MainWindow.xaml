        Width="Auto"
        Background="White"
        SizeToContent="WidthAndHeight"
        Icon="Resources/Images/Angle.png">
    <StackPanel Orientation="Vertical">
        <!--Top-->
        <DockPanel Background="LightSkyBlue" Height="Auto">
            <TextBlock
                Foreground="White"
                VerticalAlignment="Center"
                FontSize="13"
                Text="游戏运行状态(Game run):"
                Margin="5,5" />
            <Canvas Width="90">
                <Border
                    Name="Border_Running"
                    Height="Auto"
                    Width="Auto"
                    Canvas.Top="3"
                    Visibility="Hidden"
                    BorderThickness="1"
                    BorderBrush="Green"
                    Background="ForestGreen"
                    CornerRadius="10">
                    <TextBlock
                        Text="✅运行中"
                        Padding="5 2 5 2"
                        Foreground="White" />
                </Border>
                <Border
                    Name="Border_Stopped"
                    Height="Auto"
                    Width="Auto"
                    Canvas.Top="3"
                    BorderThickness="1"
                    BorderBrush="DarkRed"
                    Background="Red"
                    CornerRadius="10">
                    <TextBlock
                        Text="❌未发现游戏"
                        Padding="5 2 5 2"
                        Foreground="White" />
                </Border>
            </Canvas>

            <StackPanel
                Orientation="Horizontal"
                HorizontalAlignment="Right">
                <TextBlock
                    Foreground="White"
                    FontSize="13"
                    Text="修改器开关(TRainer state):"
                    Margin="5,5" />
                <Image
                    Name="Image_TRainer_State"
                    Width="35" Height="Auto"
                    Margin="0 0 10 0"
                    MouseLeftButtonDown="Btn_OnClick"
                    Source="Resources/Images/icon_switch_green2.png" />
                <Button
                    Name="Btn_About"
                    Width="80"
                    Height="22"
                    Click="Btn_OnClick"
                    Margin="0 0 2 0"
                    Content="关于(About)" />
            </StackPanel>
