<Window x:Class="BoneTownHelperApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BoneTownHelperApplication"
        mc:Ignorable="d"
        Title="骨头镇修改器(Bonetown TRainer)-actor2015(v1.0)"
        Height="Auto"
        Width="Auto"
        Background="White"
        SizeToContent="WidthAndHeight"
        Icon="Assets/Bonetown.ico">
    <StackPanel Orientation="Vertical">
        <!--Top-->
        <DockPanel Background="LightSkyBlue" Height="Auto">
            <TextBlock
                Foreground="White"
                VerticalAlignment="Center"
                FontSize="13"
                Text="游戏运行状态(Game run):"
                Margin="5,5" />
            <Canvas Width="90">
                <Border
                    Name="Border_Running"
                    Height="Auto"
                    Width="Auto"
                    Canvas.Top="3"
                    Visibility="Hidden"
                    BorderThickness="1"
                    BorderBrush="Green"
                    Background="ForestGreen"
                    CornerRadius="10">
                    <TextBlock
                        Text="✅运行中"
                        Padding="5 2 5 2"
                        Foreground="White" />
                </Border>
                <Border
                    Name="Border_Stopped"
                    Height="Auto"
                    Width="Auto"
                    Canvas.Top="3"
                    BorderThickness="1"
                    BorderBrush="DarkRed"
                    Background="Red"
                    CornerRadius="10">
                    <TextBlock
                        Text="❌未发现游戏"
                        Padding="5 2 5 2"
                        Foreground="White" />
                </Border>
            </Canvas>

            <StackPanel
                Orientation="Horizontal"
                HorizontalAlignment="Right">
                <TextBlock
                    Foreground="White"
                    FontSize="13"
                    Text="修改器开关(TRainer state):"
                    Margin="5,5" />
                <Image
                    Name="Image_TRainer_State"
                    Width="35" Height="Auto"
                    Margin="0 0 10 0"
                    MouseLeftButtonDown="Btn_OnClick"
                    Source="Resources/Images/icon_switch_green2.png" />
                <Button
                    Name="Btn_About"
                    Width="80"
                    Height="22"
                    Click="Btn_OnClick"
                    Margin="0 0 2 0"
                    Content="关于(About)" />
            </StackPanel>
        </DockPanel>

        <StackPanel Orientation="Horizontal">
            <Image
                Width="150"
                VerticalAlignment="Top"
                Source="Resources/Images/Bonetown_Side_Image(225x320).jpg" />
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />

                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />

                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>


                <TextBlock
                    Grid.Row="1"
                    Grid.Column="1"
                    Foreground="Red"
                    TextAlignment="Center"
                    Text="项目(Property)" />
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="2"
                    Foreground="Red"
                    Text="当前值(Value)">
                    <!-- 当前值&#x0A;(Value) -->
                </TextBlock>
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="3"
                    TextAlignment="Center"
                    Foreground="Red"
                    Text="热键(HotKey)" />
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="4"
                    TextAlignment="Center"
                    Foreground="Red"
                    Text="点击加点(Click2+)" />


                <!--图片来源from: BoneTown\game\data\gui\mainCharacter -->
                <Image
                    Grid.Row="2"
                    Grid.Column="0"
                    Width="Auto" Height="20"
                    Source="Resources/Images/money_split.png" />
                <TextBlock
                    Grid.Row="2"
                    Grid.Column="1"
                    Text="钱(Money):"
                    Margin="1" />
                <TextBlock
                    Name="TB_Money"
                    Grid.Row="2"
                    Grid.Column="2"
                    Padding="1 0 0 0"
                    Text="100" />
                <TextBlock
                    Grid.Row="2"
                    Grid.Column="3"
                    Text="Ctrl + 0"
                    TextAlignment="Center" />
                <Button
                    Name="Btn_Money"
                    Grid.Row="2"
                    Grid.Column="4"
                    Click="Btn_OnClick"
                    Content="+1000" />


                <!--图片来源from: BoneTown\game\data\gui\powerup -->
                <Image
                    Grid.Row="3"
                    Grid.Column="0"
                    Width="Auto" Height="20"
                    Source="Resources/Images/PwrICONBeerSM.png" />
                <TextBlock
                    Grid.Row="3"
                    Grid.Column="1"
                    Text="啤酒(Beer):"
                    Margin="1" />
                <TextBlock
                    Name="TB_Beer"
                    Grid.Row="3"
                    Grid.Column="2"
                    Padding="1 0 0 0"
                    Text="100" />
                <TextBlock
                    Grid.Row="3"
                    Grid.Column="3"
                    Text="Ctrl + 1"
                    TextAlignment="Center" />
                <Button
                    Name="Btn_Beer"
                    Grid.Row="3"
                    Grid.Column="4"
                    Click="Btn_OnClick"
                    Content="+100" />


                <Image
                    Grid.Row="4"
                    Grid.Column="0"
                    Width="Auto" Height="20"
                    Source="Resources/Images/PwrICONWhiskeySM.png" />
                <TextBlock
                    Grid.Row="4"
                    Grid.Column="1"
                    Text="威士忌(Whiskey):"
                    Margin="1" />
                <TextBlock
                    Name="TB_Whiskey"
                    Grid.Row="4"
                    Grid.Column="2"
                    Padding="1 0 0 0"
                    Text="100" />
                <TextBlock
                    Grid.Row="4"
                    Grid.Column="3"
                    Text="Ctrl + 2"
                    TextAlignment="Center" />
                <Button
                    Name="Btn_Whiskey"
                    Grid.Row="4"
                    Grid.Column="4"
                    Click="Btn_OnClick"
                    Content="+100" />


                <Image
                    Grid.Row="5"
                    Grid.Column="0"
                    Width="Auto" Height="20"
                    Source="Resources/Images/PwrICONNugSM.png" />
                <TextBlock
                    Grid.Row="5"
                    Grid.Column="1"
                    Text="大麻(Nug):"
                    Margin="1" />
                <TextBlock
                    Name="TB_Nug"
                    Grid.Row="5"
                    Grid.Column="2"
                    Padding="1 0 0 0"
                    Text="100" />
                <TextBlock
                    Grid.Row="5"
                    Grid.Column="3"
                    Text="Ctrl + 3"
                    TextAlignment="Center" />
                <Button
                    Name="Btn_Nug"
                    Grid.Row="5"
                    Grid.Column="4"
                    Click="Btn_OnClick"
                    Content="+100" />


                <Image
                    Grid.Row="6"
                    Grid.Column="0"
                    Width="Auto" Height="20"
                    Source="Resources/Images/PwrICONShroomSM.png" />
                <TextBlock
                    Grid.Row="6"
                    Grid.Column="1"
                    Text="蘑菇(Shroom):"
                    Margin="1" />
                <TextBlock
                    Name="TB_Shroom"
                    Grid.Row="6"
                    Grid.Column="2"
                    Padding="1 0 0 0"
                    Text="100" />
                <TextBlock
                    Grid.Row="6"
                    Grid.Column="3"
                    Text="Ctrl + 4"
                    TextAlignment="Center" />
                <Button
                    Name="Btn_Shroom"
                    Grid.Row="6"
                    Grid.Column="4"
                    Click="Btn_OnClick"
                    Content="+100" />


                <Image
                    Grid.Row="7"
                    Grid.Column="0"
                    Width="Auto" Height="20"
                    Source="Resources/Images/PwrICONPeyoteSM.png" />
                <TextBlock
                    Grid.Row="7"
                    Grid.Column="1"
                    Text="仙人掌(Peyote):"
                    Margin="1" />
                <TextBlock
                    Name="TB_Peyote"
                    Grid.Row="7"
                    Grid.Column="2"
                    Padding="1 0 0 0"
                    Text="100" />
                <TextBlock
                    Grid.Row="7"
                    Grid.Column="3"
                    Text="Ctrl + 5"
                    TextAlignment="Center" />
                <Button
                    Name="Btn_Peyote"
                    Grid.Row="7"
                    Grid.Column="4"
                    Click="Btn_OnClick"
                    Content="+100" />


                <Image
                    Grid.Row="8"
                    Grid.Column="0"
                    Width="Auto" Height="20"
                    Source="Resources/Images/PwrICONFrogSM.png" />
                <TextBlock
                    Grid.Row="8"
                    Grid.Column="1"
                    Text="青蛙(Frog):"
                    Margin="1" />
                <TextBlock
                    Name="TB_Frog"
                    Grid.Row="8"
                    Grid.Column="2"
                    Padding="1 0 0 0"
                    Text="100" />
                <TextBlock
                    Grid.Row="8"
                    Grid.Column="3"
                    Text="Ctrl + 6"
                    TextAlignment="Center" />
                <Button
                    Name="Btn_Frog"
                    Grid.Row="8"
                    Grid.Column="4"
                    Click="Btn_OnClick"
                    Content="+100" />


                <Image
                    Grid.Row="9"
                    Grid.Column="0"
                    Width="Auto" Height="20"
                    Source="Resources/Images/PwrICONCrackSM.png" />
                <TextBlock
                    Grid.Row="9"
                    Grid.Column="1"
                    Text="可卡因(Crack):"
                    Margin="1" />
                <TextBlock
                    Name="TB_Crack"
                    Grid.Row="9"
                    Grid.Column="2"
                    Padding="1 0 0 0"
                    Text="100" />
                <TextBlock
                    Grid.Row="9"
                    Grid.Column="3"
                    Text="Ctrl + 7"
                    TextAlignment="Center" />
                <Button
                    Name="Btn_Crack"
                    Grid.Row="9"
                    Grid.Column="4"
                    Click="Btn_OnClick"
                    Content="+100" />


                <Image
                    Grid.Row="10"
                    Grid.Column="0"
                    Width="Auto" Height="20"
                    Source="Resources/Images/east_west.png" />
                <TextBlock
                    Grid.Row="10"
                    Grid.Column="1"
                    Text="东西(East&amp;West):"
                    Margin="1" />
                <TextBlock
                    Name="TB_XAxis"
                    Grid.Row="10"
                    Grid.Column="2"
                    Padding="1 0 0 0"
                    Text="0" />
                <TextBlock
                    Grid.Row="10"
                    Grid.Column="3"
                    Text="← →"
                    TextAlignment="Center" />
                <UniformGrid
                    Grid.Row="10"
                    Grid.Column="4"
                    Rows="1"
                    Columns="2">
                    <Button
                        Name="Btn_XAxis_Minus"
                        Content="西(W)+5"
                        Click="Btn_OnClick" />
                    <Button
                        Name="Btn_XAxis_Plus"
                        Margin="5 0 0 0"
                        Content="东(E)+5"
                        Click="Btn_OnClick" />
                </UniformGrid>


                <Image
                    Grid.Row="11"
                    Grid.Column="0"
                    Width="Auto" Height="20"
                    Source="Resources/Images/north_south.png" />
                <TextBlock
                    Grid.Row="11"
                    Grid.Column="1"
                    Text="南北(South&amp;North):"
                    Margin="1" />
                <TextBlock
                    Name="TB_YAxis"
                    Grid.Row="11"
                    Grid.Column="2"
                    Padding="1 0 0 0"
                    Text="0" />
                <TextBlock
                    Grid.Row="11"
                    Grid.Column="3"
                    Text="↕‌"
                    TextAlignment="Center" />
                <UniformGrid
                    Grid.Row="11"
                    Grid.Column="4"
                    Rows="1"
                    Columns="2">
                    <Button
                        Name="Btn_YAxis_Minus"
                        Content="南(S)+5"
                        Click="Btn_OnClick" />
                    <Button
                        Name="Btn_YAxis_Plus"
                        Margin="5 0 0 0"
                        Content="北(N)+5"
                        Click="Btn_OnClick" />
                </UniformGrid>


                <Image
                    Grid.Row="12"
                    Grid.Column="0"
                    Width="Auto" Height="20"
                    Source="Resources/Images/height.png" />
                <TextBlock
                    Grid.Row="12"
                    Grid.Column="1"
                    Text="高度(Height):"
                    Margin="1" />
                <TextBlock
                    Name="TB_ZAxis"
                    Grid.Row="12"
                    Grid.Column="2"
                    Padding="1 0 0 0"
                    Text="0" />
                <TextBlock
                    Grid.Row="12"
                    Grid.Column="3"
                    Padding="5 0"
                    Text="Ctrl + L, Ctrl + H‌"
                    TextAlignment="Center"
                    Margin="1" />
                <UniformGrid
                    Grid.Row="12"
                    Grid.Column="4"
                    Rows="1"
                    Columns="2">
                    <Button
                        Name="Btn_ZAxis_Minus"
                        Content="-5"
                        Click="Btn_OnClick" />
                    <Button
                        Name="Btn_ZAxis_Plus"
                        Margin="5 0 0 0"
                        Content="+5"
                        Click="Btn_OnClick" />
                </UniformGrid>
            </Grid>
        </StackPanel>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />

                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />

                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Foreground="DarkRed"
                Text="在地图上瞬移(teleport on map):"
                Margin="1 5 0 0" />

            <TextBlock
                Grid.Row="1"
                Grid.Column="0"
                TextAlignment="Center"
                VerticalAlignment="Center"
                Foreground="Red"
                Text="地图编号&#x0A;(map №)"
                Margin="2 0 5 0" />

            <!-- <TextBlock -->
            <!--     Grid.Row="1" -->
            <!--     Grid.Column="1" -->
            <!--     TextAlignment="Center" -->
            <!--     VerticalAlignment="Center" -->
            <!--     Text="岛屿(map)" -->
            <!--     Margin="2 0 5 0" /> -->

            <TextBlock
                Grid.Row="1"
                Grid.Column="1"
                TextAlignment="Center"
                Foreground="Red"
                Text="可收集的物品&#x0A;(Collectible items)"
                Margin="0 0 5 0" />

            <TextBlock
                Grid.Row="1"
                Grid.Column="2"
                Grid.ColumnSpan="2"
                VerticalAlignment="Center"
                Foreground="Red"
                Text="瞬移到(teleport to)"
                Margin="1" />

            <TextBlock
                Grid.Row="2"
                Grid.Column="0"
                TextAlignment="Center"
                VerticalAlignment="Center"
                Text="1.传教士海滩&#x0A;(Missionary Beach)" />
            <!-- 图片来自: BoneTown\game\data\gui\Tokens -->
            <Image
                Grid.Row="2"
                Grid.Column="1"
                Width="33" Height="Auto"
                Source="Resources/Images/FunTicketIKON.png" />

            
            <TextBlock
                Grid.Row="3"
                Grid.Column="0"
                TextAlignment="Center"
                VerticalAlignment="Center"
                Text="2.(阔叶林)&#x0A;(Firm Wood Forest)" />
            <Image
                Grid.Row="3"
                Grid.Column="1"
                Width="33" Height="Auto"
                Source="Resources/Images/DiamondIKON.png" />

            
            <TextBlock
                Grid.Row="4"
                Grid.Column="0"
                TextAlignment="Center"
                VerticalAlignment="Center"
                Text="3.国土安全拖车公园&#x0A;(Homeland Trailer Park)" />
            <Image
                Grid.Row="4"
                Grid.Column="1"
                Width="33" Height="Auto"
                Source="Resources/Images/JugIKON.png" />

            
            <TextBlock
                Grid.Row="5"
                Grid.Column="0"
                TextAlignment="Center"
                VerticalAlignment="Center"
                Text="4.加巴乔高地&#x0A;(Gabacho Heights)" />
            <Image
                Grid.Row="5"
                Grid.Column="1"
                Width="33" Height="Auto"
                Source="Resources/Images/GaneshIKON.png" />

            
            <TextBlock
                Grid.Row="6"
                Grid.Column="0"
                TextAlignment="Center"
                VerticalAlignment="Center"
                Text="5.哈瓦那印第安人保留地&#x0A;(Havajo Indian Reservation)" />
            <Image
                Grid.Row="6"
                Grid.Column="1"
                Width="33" Height="Auto"
                Source="Resources/Images/PchipIKON.png" />

            
            <TextBlock
                Grid.Row="7"
                Grid.Column="0"
                TextAlignment="Center"
                VerticalAlignment="Center"
                Text="6.诺丁山&#x0A;(Nobbing Hill)" />
            <Image
                Grid.Row="7"
                Grid.Column="1"
                Width="33" Height="Auto"
                Source="Resources/Images/BeerBongIKON.png" />

            
            <TextBlock
                Grid.Row="8"
                Grid.Column="0"
                TextAlignment="Center"
                VerticalAlignment="Center"
                Text="7.蘑菇沼泽&#x0A;(Mushroom Marsh)" />
            <TextBlock
                Grid.Row="8"
                Grid.Column="1"
                TextAlignment="Center"
                VerticalAlignment="Center"
                Text="无(None)" />

            
            <TextBlock
                Grid.Row="9"
                Grid.Column="0"
                TextAlignment="Center"
                VerticalAlignment="Center"
                Text="8.骨头镇市中心&#x0A;(Downtown BoneTown)" />
            <Image
                Grid.Row="9"
                Grid.Column="1"
                Width="33" Height="Auto"
                Source="Resources/Images/DaytonIKON.png" />
            <Border
                Height="Auto"
                Width="Auto"
                Grid.Row="9"
                Grid.Column="2"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                BorderThickness="0.5"
                BorderBrush="Black"
                Background="LightGray">
                <TextBlock
                    Name="TB_RonJTowers"
                    TextAlignment="Center"
                    MouseLeftButtonDown="OnTeleportClick">
                    <Image
                        Width="15" Height="Auto"
                        Source="Resources/Images/RonJEntrance.png" />
                    RJ大富翁<LineBreak />(RonJ Towers)
                </TextBlock>
            </Border>
            <Border
                Height="Auto"
                Width="Auto"
                Grid.Row="9"
                Grid.Column="3"
                Margin="1 0 0 0"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                BorderThickness="0.5"
                BorderBrush="Black"
                Background="LightGray">
                <!-- Name="" -->
                <TextBlock
                    Name="TB_Angle"
                    MouseEnter="MouseEnterLeaveEvent"
                    MouseLeave="MouseEnterLeaveEvent"
                    MouseLeftButtonDown="OnTeleportClick"
                    TextAlignment="Center">
                    <Image
                        Width="15" Height="Auto"
                        Source="Resources/Images/Angle.png" />
                    天使<LineBreak />(angle)
                </TextBlock>
            </Border>
            <!-- IsOpen="{Binding ElementName=TB_Angle, Path=IsMouseDirectlyOver}" -->
            <Popup 
                Name="myPopup"
                IsOpen="False"
                Placement="MousePoint"
                PlacementTarget="{Binding ElementName=TB_Angle}" 
                StaysOpen="True">
                <Image
                    Width="180" Height="180"
                    Source="Resources/Images/Angle.png" />
            </Popup>
            
            
            <TextBlock
                Grid.Row="10"
                Grid.Column="0"
                TextAlignment="Center"
                VerticalAlignment="Center"
                Text="9.男人岛&#x0A;(Man Island)" />
            <TextBlock
                Grid.Row="10"
                Grid.Column="1"
                TextAlignment="Center"
                VerticalAlignment="Center"
                Text="无(None)" />

        </Grid>
    </StackPanel>
</Window>